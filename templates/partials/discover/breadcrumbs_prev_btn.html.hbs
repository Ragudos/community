{{#if (eq offset 0)}}
<button disabled aria-label="Go to previous list of communities">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"
        fill="currentColor" class="w-4 h-4">
        <path fill-rule="evenodd"
            d="M9.78 4.22a.75.75 0 0 1 0 1.06L7.06 8l2.72 2.72a.75.75 0 1 1-1.06 1.06L5.47 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.75.75 0 0 1 1.06 0Z"
            clip-rule="evenodd" />
    </svg>
    Previous
</button>
{{else}}
<button data-change-offset
    aria-label="Go to previous list of communities"
    hx-get="/discover/api" hx-target="#section-of-communities"
    name="offset"
    value="{{(sub offset 1)}}"
    hx-include="[name='category'],[name='search']"
    hx-sync="[name='category']">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"
        fill="currentColor" class="w-4 h-4">
        <path fill-rule="evenodd"
            d="M9.78 4.22a.75.75 0 0 1 0 1.06L7.06 8l2.72 2.72a.75.75 0 1 1-1.06 1.06L5.47 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.75.75 0 0 1 1.06 0Z"
            clip-rule="evenodd" />
    </svg>
    Previous
</button>
{{/if}}