<!DOCTYPE html>
<html lang="{{ metadata.language }}" data-theme="{{ metadata.theme }}">
	<head>
		{{> partials/head }}
		{{> partials/head/htmx-loading}}
		{{> partials/head/cropper}}
		{{> partials/scripts/recaptcha}}
	</head>
	<body hx-ext="loading-states">
		{{> partials/main_header }}
		<main class="container">
			<div>
				<form
					hx-trigger="submit"
					hx-post="/create/community"
					hx-swap="outerHTML"
					id="create-community-form"
					hx-sync="#create-community-form:drop"
					method="post"
					action="/create/community"
					enctype="multipart/form-data"
				>
					<div class="input-group">
						<label for="community_name">Name</label>
						<input placeholder="The Best Community Evah" type="text" name="community_name" id="community_name"  maxlength="20" required>
					</div>
					<div class="input-group">
						<label for="description">Description</label>
						<textarea placeholder="This community is the best!" type="text" name="description" minlength="20" maxlength="100" id="description" required></textarea>
					</div>
					<div class="input-group">
						<label for="category">Category</label>
						<select name="category" id="category">
							<option value="" selected>Choose a category</option>
							<option value="art">Art</option>
							<option value="music">Music</option>
							<option value="gaming">Gaming</option>
							<option value="sports">Sports</option>
							<option value="science">Science</option>
							<option value="technology">Technology</option>
							<option value="literature">Literature</option>
							<option value="healthandfitness">Health &amp; Fitness</option>
							<option value="selfimprovement">Self Improvement</option>
							<option value="academics">Academics</option>
						</select>
					</div>
					<input type="text" name="honeypot" style="display: none;">
					<button type="button">Create</button>
				</form>
			</div>
		</main>
		{{> partials/footer }}
	</body>
</html>